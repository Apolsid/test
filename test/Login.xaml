<Page x:Class="test.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <StackPanel>
            <Label Content="Имя" Margin="10 10 10 0" />
            <TextBox Name="username" Margin="10 0 10 0" Width="200" HorizontalAlignment="Left"/>
            
            <Label Content="Пароль" Margin="10 15 10 0" />
            <TextBox Name="password" Margin="10 0 10 0" Width="200" HorizontalAlignment="Left"/>
            
            <Button Name="BtnLogin" Content="Войти" Margin="10 50 10 0" Width="200" HorizontalAlignment="Left"/>

            <Label Name="status" Margin="20" HorizontalAlignment="Left" Foreground="red"/>
        </StackPanel>
    </Grid>
</Page>
